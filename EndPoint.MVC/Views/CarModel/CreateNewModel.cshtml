<div class="container mt-5">
    <h1 class="mb-4 text-center">افزودن مدل جدید</h1>

    <form method="post" asp-controller="CarModel" asp-action="Add">
        <div class="mb-3">
            <label for="name" class="form-label">نام مدل خودرو</label>
            <input type="text" id="name" name="name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="manufacturer" class="form-label">تولیدکننده</label>
            <input type="text" id="manufacturer" name="manufacturer" class="form-control" required />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">ذخیره</button>
            <a href="/CarModel/Index" class="btn btn-secondary">بازگشت</a>
        </div>
    </form>
</div>

<style>
    .container {
        max-width: 600px;
        margin: 0 auto;
    }

    h1 {
        color: #333;
    }
</style>